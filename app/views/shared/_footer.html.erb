<div class="container-fluid footer">
  <div class="col-md-4 footer-info"></div>
  <div class="col-md-1"></div>
  <div class="col-md-7 footer-connect">
    <ul>
      <% if user_signed_in? %>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Sign out" %>
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to 'Nouveau journaliste', new_user_registration_path %>
        </li>
        <li>
          <%= link_to 'Espace jouraliste', new_user_session_path %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

