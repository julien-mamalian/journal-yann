<div class="col-xs-9 ">
  <div class="marley-animated col-xs-12 " data-sr="move, opacity 0.4, over 1.8s">
    <div class="grid ">
      <div class="">
        &nbsp;
        <figure class="effect-marley ">
          <%= image_tag @first[0].picture %>
          <figcaption>
            <h3> <%= @first[0].title %> </h3>
            <p><%= markdown_to_html(@first[0].content.split(" ").first(35).join(" ") + "...") %></p>
            <%= link_to 'LIRE', article_path(@first[0]) %>

          </figcaption>
        </figure>
      </div>

    </div>

  </div>
  <% @second.each do |article| %>
    <div class="marley-animated col-xs-6 " data-sr="move, opacity 0.4, over 1.8s">
      <div class="grid ">
        <div class="">
          &nbsp;
          <figure class="effect-marley ">
            <%= image_tag article.picture %>
            <figcaption>
              <h3> <%= article.title %> </h3>
              <p><%= markdown_to_html(article.content.split(" ").first(35).join(" ") + "...") %></p>
              <%= link_to 'LIRE', article_path(article) %>

            </figcaption>
          </figure>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="col-xs-3">
<br><br>
  <div class="side-bar">
